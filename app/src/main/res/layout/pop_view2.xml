<?xml version="1.0" encoding="utf-8"?>
<developer.zyc.wordex.ViewContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77000000">

    <LinearLayout
        android:id="@+id/pop_view_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009788"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pop_view_text_english"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left"
            android:includeFontPadding="false"
            android:text=""
            android:visibility="visible"
            android:textColor="#FFF"
            android:textSize="20sp" />

            <ImageView
                android:id="@+id/pop"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:src="@drawable/ic_3d_dic3"
                 />

            </LinearLayout>

        <TextView
            android:id="@+id/pop_view_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:includeFontPadding="false"
            android:textColor="#FFF"
            android:textSize="15sp" />
    </LinearLayout>

</developer.zyc.wordex.ViewContainer>